@model DrPet.Web.Models.MultipleViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Update User</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="C.FirstName" class="control-label"></label>
                <input asp-for="C.FirstName" class="form-control" />
                <span asp-validation-for="C.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C.LastName" class="control-label"></label>
                <input asp-for="C.LastName" class="form-control" />
                <span asp-validation-for="C.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C.DateOfBirth" class="control-label"></label>
                <input asp-for="C.DateOfBirth" class="form-control" />
                <span asp-validation-for="C.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C.DocumentNumber" class="control-label"></label>
                <input asp-for="C.DocumentNumber" class="form-control" />
                <span asp-validation-for="C.DocumentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C.StreeName" class="control-label"></label>
                <input asp-for="C.StreeName" class="form-control" />
                <span asp-validation-for="C.StreeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C.Location" class="control-label"></label>
                <input asp-for="C.Location" class="form-control" />
                <span asp-validation-for="C.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C.PostalCode" class="control-label"></label>
                <input asp-for="C.PostalCode" class="form-control" />
                <span asp-validation-for="C.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="C.Phone" class="control-label"></label>
                <input asp-for="C.Phone" class="form-control" />
                <span asp-validation-for="C.Phone" class="text-danger"></span>
            </div>

            @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Doctor"))
            {
                <div class="form-group">
                    <label asp-for="D.Specialization" class="control-label"></label>
                    <input asp-for="D.Specialization" class="form-control" />
                    <span asp-validation-for="D.Specialization" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="D.Id" />
            }

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="ChangePassword" class="btn btn-success">Change Password</a>
            </div>

            <div class="text-success">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}