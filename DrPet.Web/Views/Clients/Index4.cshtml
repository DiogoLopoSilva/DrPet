@model IEnumerable<DrPet.Web.Data.Entities.Client>

@{
    ViewData["Title"] = "Clients";
}

<div class="View container col-xl-auto">
    <div class="row justify-content-center">
        <div>
            <!--class="card"-->
            <div class="card-body">
                <h5 class="card-title text-uppercase mb-0">Manage Clients</h5>
            </div>
            <div class="table-responsive">
                <table class="table no-wrap user-table mb-0">
                    <thead>
                        <tr>
                            <th scope="col" class="border-0 text-uppercase font-medium"> @Html.DisplayNameFor(model => model.User.FullName)</th>
                            <th scope="col" class="border-0 text-uppercase font-medium"> @Html.DisplayNameFor(model => model.User.UserName)</th>
                            <th scope="col" class="border-0 text-uppercase font-medium"> @Html.DisplayNameFor(model => model.User.DateOfBirth)</th>
                            <th scope="col" class="border-0 text-uppercase font-medium">@Html.DisplayNameFor(model => model.User.DocumentNumber)</th>
                            <th scope="col" class="border-0 text-uppercase font-medium">@Html.DisplayNameFor(model => model.User.PhoneNumber)</th>
                            <th scope="col" class="border-0 text-uppercase font-medium text-center">Manage</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.DateOfBirth)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.DocumentNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.PhoneNumber)
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Appointments" asp-action="Create" asp-route-username="@item.User.UserName" type="button" class="btn btn-outline-info btn-circle btn-lg btn-circle"><i class="fa fa-calendar-plus"></i> </a>
                                    }
                                    <button type="button" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i class="fa fa-key"></i> </button>
                                    <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i class="fa fa-trash"></i> </a>
                                    <a asp-controller="Account" asp-action="ChangeUser" asp-route-username="@item.User.UserName" type="button" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i class="fa fa-edit"></i> </a>
                                    <a asp-controller="Account" asp-action="Profile" asp-route-username="@item.User.UserName" type="button" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i class="fa fa-upload"></i> </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>